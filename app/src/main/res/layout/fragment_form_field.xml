<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_margin"
    android:layout_marginTop="@dimen/medium_margin"
    android:padding="@dimen/min_margin">

    <ImageView
        android:id="@+id/ivIndication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/min_margin"
        android:src="@drawable/ic_email_black"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/ivIndication"
        android:layout_toRightOf="@id/ivIndication"
        android:layout_toStartOf="@+id/ivToogleButton"
        android:layout_toLeftOf="@+id/ivToogleButton"
        android:ellipsize="end"
        android:text="FieldContent"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="16dp"
        android:textColor="#212121"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/ivIndication"
        android:layout_toRightOf="@id/ivIndication"
        android:layout_marginTop="8dp"
        android:text="FieldDescription"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12dp"
        android:textColor="#727272"/>

    <ImageView
        android:id="@+id/ivToogleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:padding="6dp"
        android:src="@drawable/ic_favorite_black" />

</RelativeLayout>