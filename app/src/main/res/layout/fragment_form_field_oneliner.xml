<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_field_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/min"
    android:layout_marginTop="@dimen/min"
    android:padding="@dimen/min">

    <ImageView
        android:id="@+id/ivIndication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/min"
        android:src="@drawable/ic_email_black" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@id/ivIndication"
        android:layout_toRightOf="@id/ivIndication"
        android:ellipsize="end"
        android:text="FieldContent"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#212121"
        android:maxLines="1"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/ivIndication"
        android:layout_toRightOf="@id/ivIndication"
        android:text="FieldDescription"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#727272"
        android:maxLines="1"
        android:textSize="12dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_above="@id/tvDescription"
        android:layout_toEndOf="@id/ivIndication"
        android:layout_toRightOf="@id/ivIndication">

        <EditText
            android:id="@+id/etContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300dp"
            android:hint="FieldHint"
            android:textSize="16dp"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:maxLength="37"/>

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>